<%if signed_in? %>
	<div class="row">
		<aside class="span4">
			<session>
				<%= render 'shared/user_info' %>
			</session>
			<session>
				<%= render 'shared/stats'%>
			</session>
			<br />
			<session>
				<%= render 'shared/entry_form'%>
			</session>
		</aside>

		<div class="span8">
			<h3>Entry Feed</h3>
			<%= render 'shared/feed'%>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">

		<h1>Welcome to the My Rails App</h1>
		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary"%>
	</div>

<% end %>