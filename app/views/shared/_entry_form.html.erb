<%= form_for(@entry) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
		<%= f.label :Body %>
		<%= f.text_area :content, placeholder: "Your Text Here.."%>

	</div>
	<%= f.submit "Post", class: "btn btn-large btn-primary"%>
<% end %>

